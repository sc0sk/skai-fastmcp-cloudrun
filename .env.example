# Google Cloud Platform Configuration
GCP_PROJECT_ID=skai-fastmcp-cloudrun
GCP_PROJECT_NUMBER=666924716777
GCP_REGION=us-central1

# Cloud SQL Configuration
# For local development with Cloud SQL proxy (password authentication):
CLOUDSQL_INSTANCE=hansard-db
CLOUDSQL_DATABASE=hansard
CLOUDSQL_USER=postgres
DATABASE_PASSWORD=your_database_password_here  # Required for local proxy connection

# For production Cloud Run deployment (IAM authentication):
# Omit CLOUDSQL_USER and DATABASE_PASSWORD - IAM auth will be used automatically
# Service account authentication via Cloud SQL Python Connector

# Vertex AI Configuration
VERTEX_AI_LOCATION=us-central1

# FastMCP Configuration
MCP_TRANSPORT=stdio  # Options: stdio, http
MCP_PORT=8080        # Only used if MCP_TRANSPORT=http

# Development Settings
ENVIRONMENT=development  # Options: development, staging, production
LOG_LEVEL=INFO          # Options: DEBUG, INFO, WARNING, ERROR

# Local Development (optional - for testing without Cloud SQL)
USE_LOCAL_EMBEDDINGS=false  # Set to true to use sentence-transformers instead of Vertex AI
LOCAL_DB_PATH=data/speeches.db

# Sample Dataset
HANSARD_DATA_DIR=/home/user/skai-fastmcp-cloudrun/data/sk-hansard

# Use the GitHub provider
FASTMCP_SERVER_AUTH=fastmcp.server.auth.providers.github.GitHubProvider

# GitHub OAuth credentials (replace with your actual values)
FASTMCP_SERVER_AUTH_GITHUB_CLIENT_ID=your_github_oauth_client_id_here
FASTMCP_SERVER_AUTH_GITHUB_CLIENT_SECRET=your_github_oauth_client_secret_here
FASTMCP_SERVER_AUTH_GITHUB_BASE_URL=https://mcp.simonkennedymp.com.au